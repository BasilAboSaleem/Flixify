<!DOCTYPE html>
<html lang="en">
<%- include('../../partials/dashboard/head.ejs') %>

<body id="page-top">
  <div id="wrapper">
    <!-- Sidebar -->
    <%- include('../../partials/dashboard/sidebar.ejs') %>

    <div id="content-wrapper" class="d-flex flex-column">
      <div id="content">
        <!-- Topbar -->
        <%- include('../../partials/dashboard/topbar.ejs') %>

        <!-- Flash messages -->
        <% if (success && success.length > 0) { %>
          <div class="alert alert-success" id="flash-success">
            <%= success[0] %>
          </div>
        <% } %>

        <% if (error && error.length > 0) { %>
          <div class="alert alert-danger" id="flash-error">
            <%= error[0] %>
          </div>
        <% } %>

        <!-- Page Heading -->
        <h1 class="h3 mb-4 text-gray-800">General Settings</h1>

        <div class="row">
          <div class="col-lg-12">
            <form action="/admin/settings?_method=PUT" method="POST" enctype="multipart/form-data">

              <!-- Site Info -->
              <div class="card shadow mb-4">
                <div class="card-header py-3">
                  <h6 class="m-0 font-weight-bold text-primary">Site Info</h6>
                </div>
                <div class="card-body">
                  <div class="form-group">
                    <label>Site Name</label>
                    <input type="text" name="siteName" class="form-control" value="<%= settings?.siteName || '' %>" required>
                  </div>

                  <div class="form-group">
                    <label>Logo Image</label>
                    <input type="file" name="logoImage" class="form-control-file" accept="image/*">
                    
                    <% if (settings?.logoUrl) { %>
                      <div class="mt-3">
                        <p>Current Logo:</p>
                        <img src="<%= settings.logoUrl %>" alt="Current Logo" style="max-width: 200px; height: auto; border: 1px solid #ddd; padding: 5px; border-radius: 5px;">
                      </div>
                    <% } %>
                  </div>
                </div>
              </div>

              <!-- Contact Info -->
              <div class="card shadow mb-4">
                <div class="card-header py-3">
                  <h6 class="m-0 font-weight-bold text-primary">Contact Info</h6>
                </div>
                <div class="card-body">
                  <div class="form-group">
                    <label>Phone</label>
                    <input type="text" name="contact[phone]" class="form-control" value="<%= settings?.contact?.phone || '' %>">
                  </div>

                  <div class="form-group">
                    <label>Email</label>
                    <input type="email" name="contact[email]" class="form-control" value="<%= settings?.contact?.email || '' %>">
                  </div>
                </div>
              </div>

              <!-- Social Links -->
              <div class="card shadow mb-4">
                <div class="card-header py-3">
                  <h6 class="m-0 font-weight-bold text-primary">Social Links</h6>
                </div>
                <div class="card-body">
                  <div class="form-group">
                    <label>Facebook</label>
                    <input type="url" name="social[facebook]" class="form-control" value="<%= settings?.social?.facebook || '' %>">
                  </div>

                  <div class="form-group">
                    <label>Instagram</label>
                    <input type="url" name="social[instagram]" class="form-control" value="<%= settings?.social?.instagram || '' %>">
                  </div>

                  <div class="form-group">
                    <label>Twitter</label>
                    <input type="url" name="social[twitter]" class="form-control" value="<%= settings?.social?.twitter || '' %>">
                  </div>

                  <div class="form-group">
                    <label>VK</label>
                    <input type="url" name="social[vk]" class="form-control" value="<%= settings?.social?.vk || '' %>">
                  </div>
                </div>
              </div>

              <!-- Copyright -->
              <div class="card shadow mb-4">
                <div class="card-header py-3">
                  <h6 class="m-0 font-weight-bold text-primary">Copyright</h6>
                </div>
                <div class="card-body">
                  <div class="form-group">
                    <label>Copyright Text</label>
                    <input type="text" name="copyrightText" class="form-control" value="<%= settings?.copyrightText || '' %>">
                  </div>
                </div>
              </div>

              <button type="submit" class="btn btn-primary mb-4">Save Changes</button>
            </form>
          </div>
        </div>

      </div>
    </div>
  </div>

  <a class="scroll-to-top rounded" href="#page-top"><i class="fas fa-angle-up"></i></a>
  <%- include('../../partials/dashboard/logout.ejs') %>

  <!-- Scripts -->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
