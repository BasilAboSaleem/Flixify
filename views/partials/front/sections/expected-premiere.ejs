<section class="section section--bg" data-bg="front/img/section/section.jpg">
  <div class="container">
    <div class="row">
      <!-- section title -->
      <div class="col-12">
        <h2 class="section__title">Expected premiere</h2>
      </div>
      <!-- end section title -->

      <% expectedPremiere.forEach(movie => { %>
      <!-- card -->
      <div class="col-6 col-sm-4 col-lg-3 col-xl-2">
        <div class="card">
          <div class="card__cover">
            <img src="<%= movie.posterUrl || 'front/img/covers/cover.jpg' %>" alt="<%= movie.title %>">
            <a href="/movie/<%= movie._id %>" class="card__play">
              <i class="icon ion-ios-play"></i>
            </a>
          </div>
          <div class="card__content">
            <h3 class="card__title">
              <a href="/movie/<%= movie._id %>"><%= movie.title %></a>
            </h3>
            <span class="card__category">
              <% if (movie.genres && movie.genres.length > 0) { %>
                <% movie.genres.forEach(genre => { %>
                  <a href="#"><%= genre %></a>
                <% }) %>
              <% } else { %>
                <a href="#">Unknown</a>
              <% } %>
            </span>
            <span class="card__rate">
              <i class="icon ion-ios-star"></i><%= movie.rating || 'N/A' %>
            </span>
          </div>
        </div>
      </div>
      <!-- end card -->
      <% }) %>

      <!-- section btn -->
      <div class="col-12">
        <a href="#" class="section__btn">Show more</a>
      </div>
      <!-- end section btn -->
    </div>
  </div>
</section>
